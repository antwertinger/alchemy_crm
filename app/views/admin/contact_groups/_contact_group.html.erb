<tr class="<%= cycle('odd', 'even') %> filterable">
    <td class="icon">
        <%= render_icon 'group' -%>
    </td>
    <td class="name">
        <%= contact_group.name -%>
    </td>
    <td class="count">
        <%= contact_group.contacts.count %>
    </td>
    <td class="tools">
        <%= link_to_overlay_window(
            "",
            edit_admin_contact_group_path(contact_group),
            {
                :size => '485x300',
                :title => 'Gruppe bearbeiten'
            },
            {
                :title => 'Gruppe bearbeiten',
                :class => 'icon group_edit'
            }
        ) -%>
        <%= link_to_confirmation_window(
            '',
            "Wollen Sie die Gruppe wirklich löschen?",
            admin_contact_group_path(contact_group),
            :title => 'Gruppe löschen',
            :class => "icon group_delete"
        ) -%>
    </td>
</tr>
