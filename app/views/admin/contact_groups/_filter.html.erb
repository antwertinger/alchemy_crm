<div class="filter">
	<%= select_tag(
		"contact_group[contact_group_filters_attributes][#{count}][column]",
		options_for_select(Contact.filterable_column_names, filter.column),
		:id => "filter_column_#{count}"
	) %>
	<%= select_tag(
		"contact_group[contact_group_filters_attributes][#{count}][operator]",
		options_for_select(ContactGroupFilter.operators, filter.operator),
		:id => "filter_operator_#{count}"
	) %>
	<%= text_field_tag(
		"contact_group[contact_group_filters_attributes][#{count}][value]",
		filter.value,
		:class => 'thin_border long',
		:id => "filter_value_#{count}"
	) %>
	<%- unless filter.new_record? -%>
	<input type="hidden" value="<%= filter.id %>" name="contact_group[contact_group_filters_attributes][<%= count %>][id]" />
	<%- end -%>
	<span class="remove_filter">
		<%= link_to_function("",
			"removeContactGroupFilter(this, '#{filter.id}', '#{count}')",
			:class => 'icon remove',
			:title => 'Filter entfernen'
		) %>
	</span>
</div>
