<%- alchemy_combined_assets -%>

<%- content_for(:stylesheets) do -%>
	<%= stylesheet_link_tag('alchemy-mailings/base') %>
<%- end -%>

<%- content_for :toolbar do -%>
<div id="toolbar">
	<div id="toolbar_buttons">
		<div class="button_with_label">
			<%= link_to_overlay_window(
				content_tag('span', '', :class => 'icon tag_add'),
				new_admin_tag_path,
				{
					:title => _('New Tag'),
					:size => '310x120'
				},
				:title => _('New Tag'),
				:class => 'icon_button'
			) %><br />
			<label><%= _('New Tag') %></label>
		</div>
	</div>
	<%= js_filter_field :onkeyup => "Alchemy.ListFilter('#tag_list tr.filterable')" %>
</div>
<%- end -%>

<div id="archive_all">
	<table class="list" id="tag_list">
		<%- unless @tags.blank? -%>
		<tr class="legend">
			<th class="icon"></th>
			<th class="name">Name</th>
			<th class="size" style="width: 120px">Anzahl Kontakte</th>
			<th class="tools"></th>
		</tr>
		<%- end -%>
		<%= render @tags %>
	</table>
</div>
