<h2 class="with_padding">Sie kÃ¶nnen dieses Tag umbenennen:</h2>
<%= form_for :tag, @tag, :url => {:controller => :tags, :action => "update"}, :method => "put", :remote => true do |f| %>
	<table border="0" cellspacing="4" cellpadding="4" style="width: 100%">
		<tr>
			<td class="label medium">
				<%= f.label :name, "Name" %>
			</td>
			<td class="input">
				<%= f.text_field :name, :class => "thin_border long" %>
				&nbsp;<%= submit_tag "umbenennen", :class => "button" %>
			</td>
		</tr>
	</table>
<% end %>
<h2 class="with_padding">Oder Sie ersetzen es durch ein vorhandenes Tag:</h2>
<%= form_for :tag, @tag, :url => {:controller => :tags, :action => "update"}, :method => "put", :style => "clear: both", :remote => true do |f| %>
	<table border="0" cellspacing="4" cellpadding="4" style="width: 100%">
		<tr>
			<td class="label medium">
				<label>Tags</label>
			</td>
			<td class="input">
				<div class="tag_list">
					<%= render :partial => "radio_tag", :collection => @tags, :locals => {:name => "tag"} %>
				</div>
			</td>
		</tr>
		<tr>
			<td colspan="2" style="text-align: right">
				<%= submit_tag "ersetzen", :class => "button", :id => "tag_replace_button" %>
			</td>
		</tr>
	</table>
<% end %>
