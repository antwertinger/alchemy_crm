<%- alchemy_combined_assets -%>
<%- content_for(:stylesheets) do -%>
	<%= stylesheet_link_tag('alchemy_mailings/styles') %>
<%- end -%>
<%- content_for(:javascript_includes) do -%>
	<%= javascript_include_tag('alchemy_mailings/scripts') %>
<%- end -%>

<%- content_for :toolbar do -%>
<div id="toolbar">
	<div id="toolbar_buttons">
		<div class="button_with_label">
			<%= link_to_overlay_window(
				content_tag('span', '', :class => 'icon mailing_add'),
				new_admin_mailing_path(),
				{
					:title => 'Neues Mailing anlegen',
					:size => '450x270'
				},
				{
					:title => 'Neues Mailing anlegen',
					:class => 'icon_button'
				}
			) -%><br />
			<label>Neues Mailing</label>
		</div>
	</div>
	<%= render :partial => 'admin/partials/search_form' %>
</div>
<%- end -%>

<div id="archive_all">
	<%= render :partial => 'admin/partials/pagination_links', :locals => {:items => @mailings} %>
	<table class="list">
		<%- unless @mailings.blank? -%>
		<tr class="legend">
			<th class="icon"></th>
			<th class="name">Name</th>
			<th class="name">Betreff</th>
			<th style="width: 120px">Newsletter</th>
			<th class="size" style="width: 120px">Kontakte</th>
			<th class="time">nÃ¤chster Versand geplant fÃ¼r</th>
			<th class="tools" style="width: 88px"></th>
		</tr>
		<%- end -%>
		<%= render @mailings %>
	</table>
</div>
