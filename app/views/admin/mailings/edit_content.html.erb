<%- alchemy_assets_set(:edit_page) -%>
<%- content_for(:stylesheets) do -%>
    <%= stylesheet_link_tag('alchemy/mailings') %>
<%- end -%>
<%- content_for(:javascript_includes) do -%>
	<%= tinymce_hammer_javascript_tags %>
<%- end -%>
<%- content_for(:subnavi) do -%>
<div id="sub_navigation">
  <span class="page_status_and_name">
    <span class="page_name"><%= @page.name %></span>
    <%= image_tag("alchemy/flags/#{session[:language]}.png") if configuration(:languages).size > 1 && !@layoutpage %>
    <%= render :partial => 'admin/pages/page_status', :locals => {:page => @page} %>
  </span>
</div>
<%- end -%>
<%- content_for(:toolbar) do -%>
<div id="toolbar">
  <div id="toolbar_buttons">
    <div class="button_with_label">
      <% form_tag(
      	unlock_admin_page_path(
      		@page,
      		:redirect_to => admin_mailings_path
      	)
      ) do %>
      	<button class="icon_button" title="<%= _('explain_unlocking') %>">
      		<%= image_tag('alchemy/icons/cross.png') %>
      	</button><br />
      	<label><%= _("unlock_page") %></label>
      <% end %>
    </div>
    <div class="button_with_label">
    	<%- if configuration(:cache_pages) -%>
    		<% form_tag(
    			publish_admin_page_path(@page),
    			:onsubmit => "pleaseWaitOverlay();"
    		) do -%>
    			<button class="icon_button" title="<%= _('explain_publishing') %>">
    				<%= image_tag('alchemy/icons/globe-green.png') %>
    			</button><br />
    			<label><%= _("Sweepe cache") %></label>
    		<% end -%>
    	<%- end -%>
    </div>
    <%- unless @page.layoutpage? -%>
    <div class="button_with_label">
    	<%= link_to_overlay_window(
    		content_tag('span', '', :class => 'icon settings'),
    		configure_admin_page_path(@page),
    		{
    			:title => _('edit_page_properties'),
    			:size => '380x490'
    		},
    		:class => 'icon_button',
    		:title => _('edit_page_properties')
    	) -%><br />
    	<label><%= _('page_properties') %></label>
    </div>
    <%- end -%>
    <div class="button_with_label">
    	<%= link_to_overlay_window(
    		content_tag('span', '', :class => 'icon new_element'),
    		new_admin_element_path(:page_id => @page.id),
    		{
    			:title => _('Choose Element'),
    			:size => '380x50',
    			:overflow => true
    		},
    		{
    			:title => _('New Element'),
    			:class => 'icon_button'
    		}
    	) %><br />
    	<label><%= _('New Element') %></label>
    </div>
    <div class="button_with_label">
    	<%= link_to_overlay_window(
    		render_icon('send_mailing'),
    		deliver_admin_mailing_path(@mailing),
    		{
    			:title => _('Send Mailing'),
    			:size => '550x400'
    		},
    		{
    			:title => _('Send Mailing'),
    			:class => 'icon_button'
    		}
    	) %><br />
    	<label><%= _('Send Mailing') %></label>
    </div>
  </div>
</div>
<%- end -%>
<%- content_for :javascripts do -%>
  <script type="text/javascript" charset="utf-8">
  //<!--[CDATA[
  	document.observe("dom:loaded", function() {
  		openElementsWindow(<%= @page.id %>, '<%= _('Elements') %>');
  		openPreviewWindow('/admin/mailings/preview/'+<%= @page.id %>, '<%= _('Page Preview') %>');
  	});
  //]]-->
  </script>
<%- end -%>
