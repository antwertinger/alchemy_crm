<%- content_for(:stylesheets) do -%>
	<%= stylesheet_link_tag('alchemy_crm/styles') %>
<%- end -%>

<%- content_for :toolbar do -%>
<div id="toolbar">
	<div id="toolbar_buttons">
		<div class="button_with_label">
			<%= link_to_overlay_window(
				content_tag('span', '', :class => 'icon tag_add'),
				new_admin_tag_path,
				{
					:title => t('New Tag', :scope => 'alchemy_crm'),
					:size => '310x210'
				},
				:title => t('New Tag', :scope => 'alchemy_crm'),
				:class => 'icon_button'
			) %><br />
			<label><%= t('New Tag', :scope => 'alchemy_crm') %></label>
		</div>
	</div>
  <%= render :partial => 'admin/partials/search_form' %>
</div>
<%- end -%>

<div id="archive_all">
	<table class="list" id="tag_list">
		<%- if @tags.any? -%>
		<%= render :partial => 'admin/partials/pagination_links', :locals => {:items => @tags} %>
		<tr class="legend">
			<th class="icon"></th>
			<th class="name">Name</th>
			<th class="size" style="width: 120px">Anzahl Kontakte</th>
			<th class="tools"></th>
		</tr>
		<%- end -%>
		<%= render :partial => 'tag', :collection => @tags %>
	</table>
</div>
