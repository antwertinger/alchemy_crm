<tr class="recipient">
    <td><%= recipient.contact.blank? ? '<i>ohne</i>'.html_safe : link_to(recipient.contact.fullname.blank? ? '<i>ohne</i>'.html_safe : recipient.contact.fullname, admin_contacts_path(:query => recipient.contact.email), :title => "Kontakt anzeigen") %></td>
    <td><%= recipient.email %></td>
    <%- if reactions -%>
    <td>
        <%- recipient.reactions.each do |reaction| -%>
        <%= reaction.url %><br />
        <%- end -%>
    </td>
    <%- end -%>
    <%- if bounced -%>
    <td>
        <%- if recipient.contact -%>
        <%= link_to_overlay_window(
			'bearbeiten',
			edit_admin_contact_path(recipient.contact),
			{
				:title => 'Kontakt bearbeiten',
				:size => '345x400'
			},
			{
				:title => 'Kontakt bearbeiten',
				:class => 'button with_icon edit'
			}
		) -%>
		<%- else -%>
		&nbsp;
		<%- end -%>
    </td>
    <%- end -%>
</tr>